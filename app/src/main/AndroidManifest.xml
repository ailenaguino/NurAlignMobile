<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NurAlignApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NurAlign"
        tools:targetApi="31">
        <activity
            android:name=".feature_settings.presentation.screens.SettingsScreen"
            android:exported="false"
            android:label="@string/title_activity_settings_screen"
            android:theme="@style/Theme.NurAlign" />
        <activity
            android:name=".feature_medication.presentation.screens.AddMedicationScreen"
            android:exported="false"
            android:label="@string/title_activity_medication_tracker_screen"
            android:theme="@style/Theme.NurAlign" />
        <activity
            android:name=".feature_sleep.presentation.screens.SleepTrackerScreen"
            android:exported="false"
            android:label="@string/title_activity_sleep_tracker_screen"
            android:theme="@style/Theme.NurAlign" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.NurAlign" />
        <activity android:name=".feature_login.presentation.screens.home.Home" />
        <activity
            android:name=".feature_login.presentation.screens.signup.SignUpScreen"
            android:exported="false"
            android:label="SignUpScreen"
            android:theme="@style/Theme.NurAlign" />
        <activity android:name=".home.HomeScreen" />
        <activity android:name=".feature_mood_tracker_presentation_screens.MoodTrackerScreen" />
        <activity
            android:name=".feature_login.presentation.screens.login.LoginScreen"
            android:exported="true"
            android:label="LoginScreen"
            android:theme="@style/Theme.NurAlign">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>